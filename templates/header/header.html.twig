{% block header %}
    <header class="header">
        <nav class="navbar">
            <div class="header-dietify__logo-container"
                 style="text-align: center; display: flex; justify-content: center; align-items: center">
                <a href="{{ path('app_dashboard') }}"><img src="{{ asset('build//images/Dietify.png') }}"
                                                           alt="Dietify logo"
                                                           class="header-dietify__logo"></a>
            </div>
            <div class="header-dietify__cases">
                <a href="{{ path('app_dashboard_how_it_works') }}" class="menu">HOW IT WORKS?</a>
                <a href="{{ path('app_profile_bmi') }}" class="menu">BMI</a>
                <a href="{{ path('app_profile_diet_show') }}" class="menu">MEALPLAN</a>
                <a href="{{ path('app_profile') }}" class="menu">PROFILE</a>
            </div>
            <div>
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="btn">LOG OUT</a>
                {% else %}
                    <div class="login-container">
                        <a href="{{ path('app_login') }}" class="login-button">LOG IN</a>
                        <a href="{{ path('app_register') }}" class="signup-button">SIGN UP</a>
                    </div>
                {% endif %}
            </div>
        </nav>
    </header>
{% endblock %}